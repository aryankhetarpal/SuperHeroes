@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}
<!-- Referencing styling done in site.css page -->
<link rel="stylesheet" type="text/css" href="site.css" />
<div class="container">

    <!-- Implemented a Create button -->
    <form method="post">
        <a asp-page="./Create" asp-route-id="@Model.Products" class="create-button">+ Create</a> <!-- Create button -->
    </form>

    &nbsp;

    <!-- Spacing in between -->
    <table class="table table-bordered bg-white">
        <thead>
            <tr>
                <th>Title</th> <!-- Table header for Title -->
                <th>Action</th> <!-- Table header for Action -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Title</td> <!-- Displaying the product title -->
                    <!-- Style for Read and Delete button moved to css file -->
                    <td>
                        <a asp-page="Read" asp-route-id="@product.Id" class="link-button">Read</a> <!-- Read button -->
                        &nbsp;
                        &nbsp;

                        <!-- Spacing between the Buttons -->
                        <!-- Created Delete button -->
                        <a asp-page="Delete" asp-route-id="@product.Id" class="link-button2">Delete</a> <!-- Delete button -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>