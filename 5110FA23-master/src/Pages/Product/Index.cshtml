@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<style>
    .table-bordered {
        border: 2px solid black; /* Adjust the border width as needed */
    }

    th, td {
        color: black; /* Change the color of the text for the Title */
    }

    a {
        color: blue; /* Change the color of the link for "Read" */
    }
</style>

<div class="container" >
    <!--Implemented a Create button-->
    <form method="post">
        <a asp-page="./Create" asp-route-id="@Model.Products" style="background-color: white; font-size: 20px; color:blue">+ Create</a>
    </form>
    &nbsp;
    <table class="table table-bordered bg-white">
        <thead>
            <tr>
                <th >Title</th>
                <th >Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td style="text-decoration-color: initial">@product.Title</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id" size="20px">Read</a>
                        <!--Created Delete button-->
                        <a asp-page="Delete" asp-route-id="@product.Id" size="20px">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>